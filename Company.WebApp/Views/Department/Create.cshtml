@model Department
@{
    ViewData["Title"] = "Add Department";
}

<h3>Add Department</h3>
<div class="container">
    <form method="post" asp-controller="Department" asp-action="Create">
        <label>Name: </label>
        <input type="text" asp-for="Name" /> <br />

        <br />
        <input type="submit" value="Add" />
    </form>
</div>

<style>
    form {
        padding-top: 30px;
    }
    .container {
        width: 500px;
        clear: both;
    }

    .container input {
            width: 100%;
            clear: both;
    }
</style>